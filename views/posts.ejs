<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/posts.css">
    <title>Posts</title>
</head>
<body>
    <%- include('partials/navbar.ejs') %>
    <% if (!currentUser) { %>
        <div class="pop-up">
            <h1>You must <a href="/login">log in</a> to view the posts.</h1>
        </div>
    <% } %>

    <div class="<%= currentUser ? "" : "blurred-background"%>">
        <h1>Posts</h1>
        <div class="all-posts-container">
            <% for (post of allPosts) { %>
                <div class="post-container">
                    <h1> <%= post.title %> </h1>
                    <p> <%= post.content %> </p>
                    <p> <%= post.author.firstName %> <%= post.author.lastName %></p>
                    <p> <%= post.timeStamp %> </p>
                    <% if (currentUser && ((currentUser._id).equals(post.author._id))) { %>
                        <div><a href="/posts/<%= post._id %>/edit">Edit</a></div>
                        <div>
                            <form action="/posts/<%= post._id %>/delete" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>